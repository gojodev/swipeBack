{
    "manifest_version": 2,
    "name": "SwipeBack",
    "version": "1.0",
    "description": "Navigate tabs with finger gestures",
    "permissions": [
        "tabs",
        "activeTab",
        "background",
        "runtime"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "commands": {
        "forwardGesture": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            },
            "description": "Perform a forward gesture"
        },
        "backwardGesture": {
            "suggested_key": {
                "default": "Ctrl+Shift+B"
            },
            "description": "Perform a backward gesture"
        }
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}