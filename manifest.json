{
    "manifest_version": 3,
    "name": "SwipeBack",
    "version": "1.0",
    "description": "Navigate tabs with finger gestures",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "webRequest"
    ],
    "commands": {
        "forwardGesture": {
            "suggested_key": {
                "default": "Alt+Right"
            },
            "description": "Perform a forward gesture"
        },
        "backwardGesture": {
            "suggested_key": {
                "default": "Alt+Left"
            },
            "description": "Perform a backward gesture"
        }
    }
}